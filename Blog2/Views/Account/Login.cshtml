@model Blog2.BLL.ViewModels.User.UserLoginViewModel

<div class="container-page">
    <h2 class="title-margin">Вход в приложение</h2>

    <form method="post" asp-controller="Account" asp-action="Login">
        @* Сводка всех ошибок в начале формы *@
        <div asp-validation-summary="All" class="text-danger"></div>

        <div style="margin-bottom: 5px">
            <label asp-for="Email"></label><br />
            <input class="form-control" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div style="margin-bottom: 5px">
            <label asp-for="Password"></label><br />
            @* Добавляем type="password", чтобы скрыть ввод *@
            <input class="form-control" asp-for="Password" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div style="margin-top: 10px; margin-bottom: 5px">
            <input class="btn btn-sm btn-primary" type="submit" value="Войти" />
        </div>

        <p>
            Еще нет аккаунта?
            @* Убран лишний атрибут method *@
            <a asp-controller="Account" asp-action="Register">Регистрация</a>
        </p>
    </form>
</div>

@* Подключаем скрипты валидации *@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}