@using Blog2.DAL.Models;
@model Post

<div class="container mt-4">
    @* Карточка статьи *@
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h1 class="card-title text-primary">@Model.Title</h1>

            <div class="mb-3">
                <span class="text-muted">Теги:</span>
                @foreach (var tag in Model.Tags)
                {
                    <span class="badge rounded-pill bg-success me-1">@tag.Name</span>
                }
            </div>

            <hr />
            @* Используем Raw, если в статье есть HTML-разметка *@
            <div class="card-text mb-4">
                @Html.Raw(Model.Body)
            </div>

            <small class="text-muted">ID Автора статьи: @Model.AuthorId</small>
        </div>
    </div>

    @* Секция комментариев *@
    <div class="comments-section">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3>Комментарии</h3>
            <a class="btn btn-sm btn-outline-primary" asp-controller="Comment" asp-action="CreateComment" asp-route-postId="@Model.Id">Добавить комментарий</a>
        </div>

        @if (!Model.Comments.Any())
        {
            <p class="text-muted italic">Комментариев пока нет. Будьте первым!</p>
        }
        else
        {
            @foreach (var comment in Model.Comments)
            {
                <div class="card mb-3 w-100">
                    <div class="card-body">
                        <h6 class="fw-bold">@comment.Title</h6>
                        <p class="mb-1">@comment.Body</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">Автор: @comment.Author</small>

                            
                            @if (User.IsInRole("Администратор") || (User.Identity?.Name != null && User.Identity.Name == comment.realAuthorName))
                            {
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-outline-info" asp-controller="Comment" asp-action="EditComment" asp-route-id="@comment.Id">Редактировать</a>

                                    @* Форма для удаления *@
                                    <form asp-controller="Comment" asp-action="RemoveComment" asp-route-id="@comment.Id" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Удалить комментарий?')">Удалить</button>
                                    </form>
                                </div>
                            }
                        </div>
                        @if (User.IsInRole("Администратор"))
                        {
                            <div class="mt-2">
                                <small class="text-danger border-top d-block pt-1">Системное имя: @comment.realAuthorName</small>
                            </div>
                        }
                    </div>
                </div>
            }
        }
    </div>
</div>