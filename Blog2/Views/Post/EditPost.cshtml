@model Blog2.BLL.ViewModels.Posts.PostEditViewModel

<div class="container-page">
    <h2 class="title-margin">Редактирование статьи</h2>
    <form method="post" asp-controller="Post" asp-action="EditPost">
        <div asp-validation-summary="All" class="text-danger"></div>
        
        @* Оставляем ID один раз в скрытом поле *@
        <input type="hidden" asp-for="id" />

        <div style="margin-bottom: 15px">
            <label>Теги статьи</label>
            <table>
                @if (Model?.Tags != null)
                {
                    @for (int i = 0; i < Model.Tags.Count; i++)
                    {
                        if (i % 3 == 0)
                        {
                            @:<tr>
                        }
                        <td>
                            @Html.CheckBoxFor(model => model.Tags[i].IsSelected)
                            <label class="tag-margin">@Model.Tags[i].Name</label>
                            
                            @* Передаем ID и Name скрыто, чтобы коллекция не рассыпалась *@
                            @Html.HiddenFor(model => model.Tags[i].Id)
                            @Html.HiddenFor(model => model.Tags[i].Name)
                        </td>
                        if (i % 3 == 2 || i == Model.Tags.Count - 1)
                        {
                            @:</tr>
                        }
                    }
                }
            </table>
        </div>

        <div style="margin-bottom: 10px">
            <label asp-for="Title"></label><br />
            <input class="form-control" asp-for="Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div style="margin-bottom: 15px">
            <label asp-for="Body"></label><br />
            @* Используем textarea для текста статьи *@
            <textarea class="form-control" asp-for="Body" rows="10"></textarea>
            <span asp-validation-for="Body" class="text-danger"></span>
        </div>

        <div>
            <input class="btn btn-sm btn-primary" type="submit" value="Сохранить изменения" />
        </div>

        <p class="mt-3">
            <a asp-controller="Post" asp-action="GetPosts">Назад к списку статей</a>
        </p>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}